<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ex.admin.lookatme.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="onCLickGetVisible"
        android:text="find"
        tools:ignore="OnClick" />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:visibility="invisible"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:id="@+id/idListMapActyName"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />


    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="onClickShowMyLocation"
        android:text="showMe"
        tools:ignore="OnClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="onClickSaveMyLocation"
        android:text="saveMe"
        tools:ignore="OnClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onClickAllLocation"
        android:text="showAll"
        tools:ignore="OnClick" />


</RelativeLayout>